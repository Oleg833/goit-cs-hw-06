FROM python:3.11-slim

WORKDIR /app

COPY . /app

RUN pip install --no-cache-dir -r requirements.txt

# Встановлення необхідних пакунків для MongoDB
RUN apt-get update && apt-get install -y gnupg wget

# Завантаження ключа для офіційних репозиторіїв MongoDB
RUN wget -qO - https://www.mongodb.org/static/pgp/server-5.0.asc | apt-key add -

# Додавання офіційного репозиторію MongoDB
RUN echo "deb [ arch=amd64,arm64 ] https://repo.mongodb.org/apt/debian buster/mongodb-org/5.0 main" | tee /etc/apt/sources.list.d/mongodb-org-5.0.list

# Встановлення MongoDB
RUN apt-get update && apt-get install -y mongodb-org && rm -rf /var/lib/apt/lists/*

EXPOSE 27017
EXPOSE 3000
EXPOSE 5000

# Запуск MongoDB та додатку Python
CMD mongod --fork --logpath /var/log/mongodb.log && python main.py
